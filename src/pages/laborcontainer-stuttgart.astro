---
import Layout from '../layouts/Layout.astro';

const serviceSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "Laborcontainer Stuttgart",
  "description": "Laborcontainer für Stuttgart und Baden-Württemberg: Planung, Fertigung und schlüsselfertige Übergabe. BSL-2/BSL-3 Container, mobile Forschungslabore und Reinraumlösungen.",
  "provider": {
    "@type": "Organization",
    "name": "Planexus GmbH",
    "url": "https://www.planexus.de"
  },
  "areaServed": [
    { "@type": "City", "name": "Stuttgart" },
    { "@type": "State", "name": "Baden-Württemberg" }
  ],
  "url": "https://www.planexus.de/laborcontainer-stuttgart"
};

const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    { "@type": "ListItem", "position": 1, "name": "Start", "item": "https://www.planexus.de/" },
    { "@type": "ListItem", "position": 2, "name": "Laborcontainer Stuttgart", "item": "https://www.planexus.de/laborcontainer-stuttgart" }
  ]
};

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "Was kostet ein Laborcontainer in Stuttgart?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Das hängt stark von Größe, Ausstattung und Sicherheitsstufe ab. Ein einfaches Analyselabor liegt in einem anderen Bereich als ein BSL-2-Containerlabor mit Schleusensystem. Am besten sprechen wir kurz über Ihr Projekt – dann können wir eine realistische Größenordnung nennen."
      }
    },
    {
      "@type": "Question",
      "name": "Wie wird ein Laborcontainer nach Stuttgart geliefert?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Per Tieflader direkt auf Ihr Gelände. Die Aufstellung erfolgt per Kran. Wir kümmern uns um Transportgenehmigungen, Kranstellplatz und die gesamte Logistik."
      }
    },
    {
      "@type": "Question",
      "name": "Kann ein Laborcontainer dauerhaft genutzt werden?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Ja. Unsere Container sind keine provisorischen Lösungen, sondern vollwertige Laborräume. Viele unserer Container sind seit Jahren im Dauerbetrieb."
      }
    },
    {
      "@type": "Question",
      "name": "Brauche ich eine Baugenehmigung für einen Laborcontainer in Stuttgart?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "In vielen Fällen nicht. Laborcontainer gelten als temporäre bauliche Anlagen und fallen oft unter Verfahrensfreiheit. Das hängt vom Standort und der geplanten Nutzungsdauer ab – wir klären das gemeinsam mit Ihnen und den zuständigen Behörden."
      }
    },
    {
      "@type": "Question",
      "name": "Liefert Planexus nur nach Stuttgart oder auch in die Region?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Wir liefern in ganz Baden-Württemberg und bundesweit. Neben Stuttgart bedienen wir unter anderem Tübingen, Reutlingen, Heilbronn, Karlsruhe und die gesamte Region."
      }
    },
    {
      "@type": "Question",
      "name": "Was unterscheidet einen Laborcontainer von einem normalen Container?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Alles. Ein Laborcontainer ist von Grund auf für den Laborbetrieb konstruiert – mit kontrollierter Belüftung, Medienversorgung, normgerechten Oberflächen und auf Wunsch Sicherheitstechnik bis BSL-3."
      }
    }
  ]
};

const localBusinessSchema = {
  "@context": "https://schema.org",
  "@type": "LocalBusiness",
  "name": "Planexus GmbH",
  "description": "Laborcontainer für Stuttgart und Baden-Württemberg",
  "url": "https://www.planexus.de",
  "telephone": "+49 7435 7519 700",
  "email": "info@planexus.de",
  "address": {
    "@type": "PostalAddress",
    "streetAddress": "Am Steinbach 8",
    "addressLocality": "Albstadt",
    "postalCode": "72459",
    "addressCountry": "DE"
  },
  "areaServed": [
    { "@type": "City", "name": "Stuttgart" },
    { "@type": "State", "name": "Baden-Württemberg" }
  ]
};
---

<Layout
  title="Laborcontainer Stuttgart – Planung, Bau & Lieferung"
  description="Laborcontainer für Stuttgart und die Region: Vom mobilen Forschungslabor bis zum BSL-3 Containerlabor. Eigene Fertigung in Albstadt – 80 km entfernt. Planexus GmbH."
  canonical="/laborcontainer-stuttgart"
  schema={serviceSchema}
>
  <script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} slot="head" />
  <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} slot="head" />
  <script type="application/ld+json" set:html={JSON.stringify(localBusinessSchema)} slot="head" />

  <div class="pt-20 min-h-screen bg-white">

    <!-- Hero -->
    <section class="relative py-28 bg-slate-900 text-white overflow-hidden">
      <div class="absolute inset-0 bg-[url('https://images.unsplash.com/photo-1581093588401-fbb07aa5cd12?q=80&w=2070')] bg-cover bg-center opacity-15"></div>
      <div class="absolute inset-0 bg-gradient-to-r from-slate-900 via-slate-900/95 to-slate-900/80"></div>

      <div class="container mx-auto px-4 relative z-10">
